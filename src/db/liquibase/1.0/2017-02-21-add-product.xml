<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="Nikolay" id="create table product">
        <preConditions>
            <not>
                <tableExists tableName="product"/>
            </not>
        </preConditions>
        <createTable tableName="product">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="product_id_PK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="bit(1)" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addDefaultValue tableName="product" columnName="deleted" defaultValueBoolean="false" columnDataType="bit(1)"/>
    </changeSet>
</databaseChangeLog>
